= form_for @pub do |f|
  = f.label :name
  = f.text_field :name
  %br
  = f.label :phone_number
  = f.text_field :phone_number
  %br
  = f.label :location
  = f.text_field :location
  %br
  = f.label :description
  = f.text_area :description
  %br
  %ul
    = f.fields_for :drinks do |drink|
      %li
        = drink.label :name
        = drink.text_field :name
        %br
        = drink.label :cost
        = drink.text_field :cost
        %br
        = drink.label :description
        = drink.text_area :description

  %br
  = f.submit
  |
  = link_to "Cancel", root_path